{
  "name": "healthcare-translation-cdk",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build-lambdas": "node build-lambdas.js",
    "build-lambdas:fast": "node build-lambdas.js --fast",
    "validate-lambdas": "node build-lambdas.js --validate",
    "watch": "tsc -w",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "predeploy": "npm run validate-lambdas",
    "deploy": "npm run build-lambdas && cdk deploy",
    "deploy:fast": "npm run build-lambdas:fast && cdk deploy",
    "deploy:check": "npm run validate-lambdas && cdk synth",
    "synth": "npm run build-lambdas && cdk synth",
    "diff": "cdk diff",
    "destroy": "cdk destroy"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.879.0",
    "@aws-sdk/client-bedrock-runtime": "^3.879.0",
    "@aws-sdk/client-cloudwatch": "^3.879.0",
    "@aws-sdk/client-dynamodb": "^3.878.0",
    "@aws-sdk/client-polly": "^3.879.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/client-transcribe": "^3.879.0",
    "@aws-sdk/client-transcribe-streaming": "^3.879.0",
    "@aws-sdk/client-translate": "^3.879.0",
    "aws-cdk-lib": "^2.213.0",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.2"
  }
}
