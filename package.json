{
  "name": "healthcare-translation-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:https": "node server.js",
    "dev:ngrok": "ngrok http 3000",
    "prebuild": "node scripts/prepare-build.js",
    "build": "next build --turbopack",
    "build:amplify": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "create-certs": "mkcert -install && mkdir -p certificates && mkcert -key-file ./certificates/localhost-key.pem -cert-file ./certificates/localhost.pem localhost 127.0.0.1 ::1",
    "update-amplify-urls": "node scripts/update-amplify-urls.js",
    "predeploy": "npm run build",
    "deploy": "node scripts/deploy-with-amplify.js",
    "deploy:manual": "cd cdk && npm run deploy",
    "deploy:fast": "cd cdk && npm run deploy:fast",
    "validate:amplify": "node scripts/validate-amplify-deployment.js",
    "validate:cdk": "cd cdk && npm run validate-lambdas",
    "deploy:check": "node scripts/validate-amplify-deployment.js",
    "deploy:simulate": "node scripts/simulate-amplify-deploy.js",
    "deploy:assistant": "node scripts/amplify-deploy-assistant.js",
    "fix:favicon": "node scripts/fix-favicon-issue.js",
    "optimize:amplify": "node scripts/optimize-for-amplify.js"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.879.0",
    "@aws-sdk/client-bedrock-runtime": "^3.879.0",
    "@aws-sdk/client-dynamodb": "^3.879.0",
    "@testing-library/react": "^16.3.0",
    "aws-amplify": "^6.15.5",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.16.1",
    "@aws-amplify/backend-cli": "^1.8.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "aws-cdk-lib": "^2.204.0",
    "constructs": "^10.4.2",
    "esbuild": "^0.25.9",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
